<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.medicore.controller.LoginController"
            styleClass="login-container">
    
    <center>
        <VBox alignment="CENTER" spacing="0">
            <!-- Login Card -->
            <VBox styleClass="login-card" alignment="CENTER" spacing="30" maxWidth="450">
                
                <!-- Logo and Title Section -->
                <VBox alignment="CENTER" spacing="15">
                    <!-- Logo placeholder -->
                    <HBox alignment="CENTER" prefHeight="80" prefWidth="80" 
                          style="-fx-background-color: #2563eb; -fx-background-radius: 40;">
                        <Text text="M+" fill="white" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
                    </HBox>
                    
                    <Text text="mediCore" styleClass="login-title"/>
                    <Text text="Hospital Management System" styleClass="login-subtitle"/>
                </VBox>
                
                <!-- Role Selection -->
                <VBox spacing="15" alignment="CENTER">
                    <Label text="Select Your Role:" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <ComboBox fx:id="roleComboBox" styleClass="combo-box" prefWidth="300">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Admin"/>
                                <String fx:value="Doctor"/>
                                <String fx:value="Patient"/>
                                <String fx:value="Nurse"/>
                                <String fx:value="Pharmacist"/>
                                <String fx:value="Security Guard"/>
                                <String fx:value="Ambulance Driver"/>
                                <String fx:value="Hospital Canteen Worker"/>
                                <String fx:value="Hospital Cleaner"/>
                                <String fx:value="Receptionist and Support Staff"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>
                
                <!-- Login Form -->
                <VBox spacing="20" alignment="CENTER">
                    <!-- Username Field -->
                    <VBox spacing="8">
                        <Label text="Username or Email:" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="usernameField" styleClass="text-field" 
                                   promptText="Enter your username or email" prefWidth="300"/>
                    </VBox>
                    
                    <!-- Password Field -->
                    <VBox spacing="8">
                        <Label text="Password:" style="-fx-font-weight: bold;"/>
                        <PasswordField fx:id="passwordField" styleClass="password-field" 
                                       promptText="Enter your password" prefWidth="300"/>
                    </VBox>
                    
                    <!-- Remember Me and Forgot Password -->
                    <HBox spacing="20" alignment="CENTER">
                        <CheckBox fx:id="rememberMeCheckBox" text="Remember Me"/>
                        <Hyperlink fx:id="forgotPasswordLink" text="Forgot Password?" 
                                   onAction="#handleForgotPassword"/>
                    </HBox>
                </VBox>
                
                <!-- Action Buttons -->
                <VBox spacing="15" alignment="CENTER">
                    <Button fx:id="loginButton" text="Login" styleClass="btn, btn-primary" 
                            prefWidth="300" onAction="#handleLogin"/>
                    
                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Don't have an account?"/>
                        <Hyperlink fx:id="registerLink" text="Register Here" 
                                   onAction="#handleRegister"/>
                    </HBox>
                </VBox>
                
                <!-- Status Label -->
                <Label fx:id="statusLabel" text="" styleClass="label-error" 
                       visible="false" managed="false"/>
                
            </VBox>
        </VBox>
    </center>
    
    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <Label text="Â© 2024 mediCore HMS" style="-fx-text-fill: white; -fx-opacity: 0.8;"/>
            <Separator orientation="VERTICAL" prefHeight="20"/>
            <Label text="Version 1.0.0" style="-fx-text-fill: white; -fx-opacity: 0.8;"/>
            <Separator orientation="VERTICAL" prefHeight="20"/>
            <Hyperlink text="Help & Support" style="-fx-text-fill: white;"/>
        </HBox>
    </bottom>
    
</BorderPane>
