<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.mycompany.game.controller.MultiplayerMenuController"
            stylesheets="@../style.css">
    
    <center>
        <VBox alignment="CENTER" spacing="30" styleClass="menu-container">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            
            <!-- Title -->
            <Text text="Multiplayer" styleClass="game-title">
                <font>
                    <Font name="Segoe UI Bold" size="36"/>
                </font>
            </Text>
            
            <!-- Host Section -->
            <VBox spacing="15" alignment="CENTER" styleClass="section-container">
                <Text text="Host Game" styleClass="section-title"/>
                
                <GridPane hgap="10" vgap="10" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER"/>
                        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
                    </columnConstraints>
                    
                    <Label text="Port:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="hostPortField" text="5555" styleClass="modern-text-field" 
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <Label text="Max Players:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="maxPlayersField" text="10" styleClass="modern-text-field" 
                               GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
                
                <Button text="Start Server" styleClass="menu-button" onAction="#handleHostGame"/>
            </VBox>
            
            <!-- Separator -->
            <Separator/>
            
            <!-- Join Section -->
            <VBox spacing="15" alignment="CENTER" styleClass="section-container">
                <Text text="Join Game" styleClass="section-title"/>
                
                <GridPane hgap="10" vgap="10" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER"/>
                        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
                    </columnConstraints>
                    
                    <Label text="Server Address:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="serverAddressField" text="localhost" styleClass="modern-text-field" 
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <Label text="Port:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="joinPortField" text="5555" styleClass="modern-text-field" 
                               GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    
                    <Label text="Player Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="playerNameField" text="Player" styleClass="modern-text-field" 
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </GridPane>
                
                <Button text="Connect to Server" styleClass="menu-button" onAction="#handleJoinGame"/>
            </VBox>
            
            <!-- Status -->
            <Label fx:id="statusLabel" text="Ready" styleClass="status-label"/>
            
            <!-- Navigation -->
            <Button text="Back to Menu" styleClass="menu-button" onAction="#handleBackToMenu"/>
        </VBox>
    </center>
    
</BorderPane>
